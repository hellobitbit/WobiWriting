<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customer="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@drawable/main_bottom_background"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <com.wobi.android.wobiwriting.views.TargetToolBar
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            customer:NoSelectedSrc="@drawable/shouye_normal"
            customer:SelectedSrc="@drawable/shouye_selected"
            customer:isSelected="false"
            customer:textValue="@string/home"/>

        <com.wobi.android.wobiwriting.views.TargetToolBar
            android:id="@+id/moments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            customer:NoSelectedSrc="@drawable/wobiquan_normal"
            customer:SelectedSrc="@drawable/wobiquan_selected"
            customer:isSelected="false"
            customer:textValue="@string/moment"/>


        <com.wobi.android.wobiwriting.views.TargetToolBar
            android:id="@+id/me"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            customer:NoSelectedSrc="@drawable/wode_normal"
            customer:SelectedSrc="@drawable/wode_selected"
            customer:isSelected="false"
            customer:textValue="@string/me"/>

    </LinearLayout>

</RelativeLayout>

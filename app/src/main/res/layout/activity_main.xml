<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customer="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <FrameLayout
        android:id="@+id/bottom_background"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"/>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_background"
        android:layout_marginBottom="@dimen/home_screen_vertical_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <com.wobi.android.wobiwriting.views.TargetToolBar
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            customer:NoSelectedSrc="@mipmap/ic_launcher"
            customer:SelectedSrc="@mipmap/ic_launcher_round"
            customer:isSelected="false"
            customer:textValue="@string/home"/>

        <com.wobi.android.wobiwriting.views.TargetToolBar
            android:id="@+id/moments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            customer:NoSelectedSrc="@mipmap/ic_launcher"
            customer:SelectedSrc="@mipmap/ic_launcher_round"
            customer:isSelected="false"
            customer:textValue="@string/moment"/>


        <com.wobi.android.wobiwriting.views.TargetToolBar
            android:id="@+id/me"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            customer:NoSelectedSrc="@mipmap/ic_launcher"
            customer:SelectedSrc="@mipmap/ic_launcher_round"
            customer:isSelected="false"
            customer:textValue="@string/me"/>

    </LinearLayout>

</RelativeLayout>

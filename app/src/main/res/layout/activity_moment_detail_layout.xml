<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/actionbar_layout" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="66dp">

            <ImageView
                android:id="@+id/moment_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:background="@drawable/moment_default_headphoto"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/moment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/moment_icon"
                android:text="马老师" />

            <TextView
                android:id="@+id/moment_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/moment_name"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/moment_icon"
                android:text="373873879" />

            <TextView
                android:id="@+id/moment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="14dp"
                android:text="07:00" />

            <TextView
                android:id="@+id/moment_people_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/moment_time"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ededed" />

        <TextView
            android:id="@+id/moment_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:text="please help me ~"
            android:textColor="#464545" />

        <ImageView
            android:id="@+id/moment_icon_big"
            android:layout_width="164dp"
            android:layout_height="164dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/moment_default_poster" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="16dp"
            android:background="#ededed" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/favor_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/favor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/moments_favor_icon"
                    android:drawablePadding="2dp"
                    android:text="0"
                    android:textColor="#b2b2b2" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/comments_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/moments_coment_icon"
                    android:drawablePadding="2dp"
                    android:text="0"
                    android:textColor="#b2b2b2" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/forward_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/forward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/moments_forward_icon"
                    android:drawablePadding="2dp"
                    android:text="0"
                    android:textColor="#b2b2b2" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/addToMoment"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/add_to_moments"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>
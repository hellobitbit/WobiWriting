<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="@dimen/customer_setting_bar_margin_size"
            android:textColor="@android:color/white"
            android:id="@+id/home_item_type_name"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginTop="8dp"
            android:id="@+id/home_item_type_icon"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>

    </LinearLayout>

    <View
        android:background="@android:color/white"
        android:layout_width="@dimen/home_screen_horizontal_margin"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:id="@+id/home_item_sub_type_name_1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <View
                android:id="@+id/interval_above"
                android:background="@android:color/white"
                android:layout_width="@dimen/home_screen_horizontal_margin"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:id="@+id/home_item_sub_type_name_2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <View
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_screen_horizontal_margin"/>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:id="@+id/home_item_sub_type_name_3"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <View
                android:id="@+id/interval_below"
                android:background="@android:color/white"
                android:layout_width="@dimen/home_screen_horizontal_margin"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:id="@+id/home_item_sub_type_name_4"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customer="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/actionbar_layout"/>

    <RelativeLayout
        android:id="@+id/moment_head_portrait_bar"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="67dp">
        <TextView
            android:text="封面"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/moment_head_portrait"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:src="@drawable/moment_default_headphoto"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffd5d4" />

    <com.wobi.android.wobiwriting.views.CustomSettingBar
        android:id="@+id/moment_name_bar"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        customer:leftTextMarginLeft="20dp"
        customer:rightIconMarginRight="14dp"
        customer:leftIconVisible="false"
        customer:leftTextValue="@string/moment_name_label" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffd5d4" />

    <com.wobi.android.wobiwriting.views.CustomSettingBar
        android:id="@+id/moment_description_bar"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        customer:rightIconMarginRight="14dp"
        customer:leftTextMarginLeft="20dp"
        customer:leftIconVisible="false"
        customer:leftTextValue="@string/activity_my_info_description" />

    <View
         android:layout_width="match_parent"
         android:layout_height="0.5dp"
         android:background="#ffd5d4" />

    <com.wobi.android.wobiwriting.views.CustomSettingBar
        android:id="@+id/moment_position_bar"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        customer:leftTextMarginLeft="20dp"
        customer:rightIconMarginRight="14dp"
        customer:leftIconVisible="false"
        customer:leftTextValue="@string/moment_position_label" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffd5d4" />

    <com.wobi.android.wobiwriting.views.CustomSettingBar
        android:id="@+id/moment_permission_bar"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        customer:rightIconMarginRight="14dp"
        customer:leftTextMarginLeft="20dp"
        customer:leftIconVisible="false"
        customer:leftTextValue="@string/moment_permission_label" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffd5d4" />
</LinearLayout>
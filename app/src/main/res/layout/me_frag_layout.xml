<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customer="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/user_info"
        android:background="@drawable/me_frag_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="11dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/default_man_headphoto"
            android:text="user_icon" />

        <TextView
            android:id="@+id/user_name"
            android:layout_marginTop="8dp"
            android:layout_below="@id/user_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name" />

        <TextView
            android:textColor="@android:color/white"
            android:id="@+id/user_description"
            android:layout_below="@id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_centerHorizontal="true"
            android:text="@string/default_user_description" />

        <LinearLayout
            android:layout_below="@id/user_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/moments_num_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/moments_num_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:text="@string/moment_num_title" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="@android:color/white" />

            <LinearLayout
                android:id="@+id/follow_num_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/follow_num_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:text="@string/follow_num_title" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="@android:color/white" />

            <LinearLayout
                android:id="@+id/wodou_num_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wodou_num_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/wodou_num_title" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <com.wobi.android.wobiwriting.views.CustomSettingBar
        android:id="@+id/share_app"
        android:background="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        customer:leftTextColor="#2a2a2a"
        customer:leftIconSrc="@drawable/share_icon"
        customer:leftIconVisible="true"
        customer:leftTextValue="@string/share_the_app_to_others_title" />

    <com.wobi.android.wobiwriting.views.CustomSettingBar
        android:id="@+id/user_feedback"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        customer:leftTextColor="#2a2a2a"
        customer:leftIconSrc="@drawable/user_feedback_icon"
        customer:leftIconVisible="true"
        customer:leftTextValue="@string/activity_feedback_title" />

    <com.wobi.android.wobiwriting.views.CustomSettingBar
        android:id="@+id/account_exit"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        customer:leftTextColor="#2a2a2a"
        customer:leftIconSrc="@drawable/user_exit_icon"
        customer:leftIconVisible="true"
        customer:leftTextValue="@string/account_exit_title" />

    <View
        android:background="#ededed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>

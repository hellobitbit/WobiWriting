<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customer="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ededed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/me_frag_background">

            <RelativeLayout
                android:id="@+id/user_icon_layout"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp">

                <ImageView
                    android:id="@+id/user_icon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/default_man_headphoto"
                    android:text="user_icon" />

                <ImageView
                    android:id="@+id/my_vip_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/my_vip_v1" />
            </RelativeLayout>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_icon_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="@string/app_name"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/user_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:text="@string/default_user_description"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_description"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/moments_num_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/moments_num_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/moment_num_title"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="40dp"
                    android:background="@android:color/white" />

                <LinearLayout
                    android:id="@+id/follow_num_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/follow_num_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/follow_num_title"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="40dp"
                    android:background="@android:color/white" />

                <LinearLayout
                    android:id="@+id/wodou_num_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/wodou_num_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/wodou_num_title"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <com.wobi.android.wobiwriting.views.CustomSettingBar
            android:id="@+id/my_vip"
            android:layout_width="wrap_content"
            android:layout_height="58.6dp"
            android:background="@android:color/white"
            customer:leftIconSrc="@drawable/my_vip_icon"
            customer:leftIconVisible="true"
            customer:leftTextColor="#2a2a2a"
            customer:leftTextValue="@string/my_vip_title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.67dp"
            android:background="#ededed" />

        <com.wobi.android.wobiwriting.views.CustomSettingBar
            android:id="@+id/my_jiaocai"
            android:layout_width="wrap_content"
            android:layout_height="58.6dp"
            android:background="@android:color/white"
            customer:leftIconSrc="@drawable/my_jiaocai_icon"
            customer:leftIconVisible="true"
            customer:leftTextColor="#2a2a2a"
            customer:leftTextValue="@string/activity_my_jiaocai" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.67dp"
            android:background="#ededed" />

        <com.wobi.android.wobiwriting.views.CustomSettingBar
            android:id="@+id/share_app"
            android:layout_width="wrap_content"
            android:layout_height="58.6dp"
            android:background="@android:color/white"
            customer:leftIconSrc="@drawable/share_icon"
            customer:leftIconVisible="true"
            customer:leftTextColor="#2a2a2a"
            customer:leftTextValue="@string/share_the_app_to_others_title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.67dp"
            android:background="#ededed" />

        <com.wobi.android.wobiwriting.views.CustomSettingBar
            android:id="@+id/modify_password"
            android:layout_width="wrap_content"
            android:layout_height="58.6dp"
            android:background="@android:color/white"
            customer:leftIconSrc="@drawable/modify_password_icon"
            customer:leftIconVisible="true"
            customer:leftTextColor="#2a2a2a"
            customer:leftTextValue="@string/activity_modify_password" />

        <!--  <View
              android:layout_width="match_parent"
              android:layout_height="0.67dp"
              android:background="#ededed" />

          <com.wobi.android.wobiwriting.views.CustomSettingBar
              android:id="@+id/user_feedback"
              android:layout_width="wrap_content"
              android:layout_height="58.6dp"
              android:background="@android:color/white"
              customer:leftIconSrc="@drawable/user_feedback_icon"
              customer:leftIconVisible="true"
              customer:leftTextColor="#2a2a2a"
              customer:leftTextValue="@string/activity_feedback_title" /> -->

        <View
            android:layout_width="match_parent"
            android:layout_height="0.67dp"
            android:background="#ededed" />

        <com.wobi.android.wobiwriting.views.CustomSettingBar
            android:id="@+id/app_version_check"
            android:layout_width="wrap_content"
            android:layout_height="58.6dp"
            android:background="@android:color/white"
            customer:leftIconSrc="@drawable/app_check_upgrade_icon"
            customer:leftIconVisible="true"
            customer:leftTextColor="#2a2a2a"
            customer:leftTextValue="@string/app_check_update" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.67dp"
            android:background="#ededed" />

        <com.wobi.android.wobiwriting.views.CustomSettingBar
            android:id="@+id/account_exit"
            android:layout_width="wrap_content"
            android:layout_height="58.6dp"
            android:background="@android:color/white"
            customer:leftIconSrc="@drawable/user_exit_icon"
            customer:leftIconVisible="true"
            customer:leftTextColor="#2a2a2a"
            customer:leftTextValue="@string/account_exit_title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ededed" />

    </LinearLayout>
</ScrollView>